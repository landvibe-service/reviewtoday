    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_gravity="center_vertical"
        android:background="@color/colorWhite"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_gravity="center"
        android:background="#FFFFFF"
        android:gravity="center">

        <EditText
            android:id="@+id/edit_title"
            android:layout_width="370dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@android:color/transparent"
            android:ems="10"
            android:gravity="clip_horizontal"
            android:hint="제목"
            android:inputType="textPersonName"
            android:textSize="22sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.495"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.142" />
    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:background="#FFFFFF"
        android:gravity="center"
        android:scrollbars="vertical"
        android:scrollHorizontally="false"
        android:windowSoftInputMode="stateHidden|adjustResize">

        <LinearLayout
            android:id="@+id/detail_none_promise"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:background="#FFFFFF"
            android:gravity="center"
            android:visibility="visible"
            android:scrollbars="vertical"
            android:scrollHorizontally="false">
            <EditText
                android:id="@+id/edit_body"
                android:layout_width="370dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:background="@android:color/transparent"
                android:ems="10"
                android:gravity="clip_horizontal"
                android:hint="내용"
                android:inputType="textMultiLine"
                android:scrollbars="vertical"
                android:scrollHorizontally="false"
                android:textSize="17sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.493"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/edit_title"
                app:layout_constraintVertical_bias="0.326" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/detail_promise"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:background="#FFFFFF"
            android:gravity="center"
            android:visibility="gone"
            android:scrollbars="vertical"
            android:scrollHorizontally="false">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="450dp"
                android:layout_gravity="center"
                android:background="#FFFFFF"
                android:gravity="center">
                <EditText
                    android:id="@+id/edit_body2"
                    android:layout_width="370dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:background="@android:color/transparent"
                    android:ems="10"
                    android:gravity="clip_horizontal"
                    android:hint="내용"
                    android:inputType="textMultiLine"
                    android:scrollbars="vertical"
                    android:scrollHorizontally="false"
                    android:textSize="17sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.493"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/edit_title"
                    app:layout_constraintVertical_bias="0.326" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:background="#FFFFFF"
                android:gravity="center">
                <TextView
                    android:id="@+id/text_promise"
                    android:layout_width="370dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:gravity="center_vertical"
                    android:text="오늘의 다짐"
                    android:textSize="17sp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:background="#FFFFFF"
                android:gravity="center">
                <EditText
                    android:id="@+id/edit_promise"
                    android:layout_width="370dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:background="@android:color/transparent"
                    android:ems="10"
                    android:gravity="clip_horizontal"
                    android:hint="당신의 다짐을 작성해주세요."
                    android:text=""
                    android:inputType="textMultiLine"
                    android:scrollbars="vertical"
                    android:scrollHorizontally="false"
                    android:textSize="17sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.493"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/edit_title"
                    app:layout_constraintVertical_bias="0.326" />
            </LinearLayout>
        </LinearLayout>

    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:layout_gravity="center"
        android:background="#FFFFFF">

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <ImageButton
            android:id="@+id/bt_promise"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="bottom"
            android:layout_marginBottom="20dp"
            android:layout_marginRight="20dp"
            android:background="#FFFFFF"
            android:src="@drawable/write_store"
            android:foreground="@drawable/heart"
            android:stateListAnimator="@null" />

        <ImageButton
            android:id="@+id/bt_store"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="bottom"
            android:layout_marginBottom="20dp"
            android:layout_marginRight="20dp"
            android:tint="@color/colorLavender"
            android:background="#FFFFFF"
            android:src="@drawable/write_store"
            android:foreground="@drawable/write_store"
            android:stateListAnimator="@null" />
    </LinearLayout>

</LinearLayout>